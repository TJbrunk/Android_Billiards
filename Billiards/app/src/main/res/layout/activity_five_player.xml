<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dmcinfo.billiards.FivePlayerActivity"

    android:orientation="vertical">

    <!-- Assigned players, and ball images -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90">

        <!-- Assigned players. Vertical column on left side -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:orientation="vertical">

            <Spinner android:id="@+id/player_1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Spinner android:id="@+id/player_2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Spinner android:id="@+id/player_3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Spinner android:id="@+id/player_4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Spinner android:id="@+id/player_5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <!-- Pool ball images -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right">

            <!--Balls 1 - 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button android:id="@+id/ball_1"
                    style="@style/BallDisplay"
                    android:background="@drawable/one" />

                <Button android:id="@+id/ball_2"
                    style="@style/BallDisplay"
                    android:background="@drawable/two" />

                <Button android:id="@+id/ball_3"
                    style="@style/BallDisplay"
                    android:background="@drawable/three" />
            </LinearLayout>

            <!-- Balls 4-6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button android:id="@+id/ball_4"
                    style="@style/BallDisplay"
                    android:background="@drawable/four" />

                <Button android:id="@+id/ball_5"
                    style="@style/BallDisplay"
                    android:background="@drawable/five" />

                <Button android:id="@+id/ball_6"
                    style="@style/BallDisplay"
                    android:background="@drawable/six" />

            </LinearLayout>

             <!-- Balls 7 - 9 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button android:id="@+id/ball_7"
                    style="@style/BallDisplay"
                    android:background="@drawable/seven" />

                <Button android:id="@+id/ball_8"
                    style="@style/BallDisplay"
                    android:background="@drawable/eight" />

                <Button android:id="@+id/ball_9"
                    style="@style/BallDisplay"
                    android:background="@drawable/nine" />

            </LinearLayout>

            <!-- Balls 10 - 12 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button android:id="@+id/ball_10"
                    style="@style/BallDisplay"
                    android:background="@drawable/ten" />

                <Button android:id="@+id/ball_11"
                    style="@style/BallDisplay"
                    android:background="@drawable/eleven" />

                <Button android:id="@+id/ball_12"
                    style="@style/BallDisplay"
                    android:background="@drawable/twelve" />
            </LinearLayout>

            <!--Balls 13 - 15-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button android:id="@+id/ball_13"
                    style="@style/BallDisplay"
                    android:background="@drawable/thirteen" />

                <Button android:id="@+id/ball_14"
                    style="@style/BallDisplay"
                    android:background="@drawable/fourteen" />

                <Button android:id="@+id/ball_15"
                    style="@style/BallDisplay"
                    android:background="@drawable/fifteen" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Player order spinners -->
    <LinearLayout
        android:layout_weight="30"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom">

        <Spinner android:id="@+id/first_player"
            style="@style/Players"/>

        <Spinner android:id="@+id/second_player"
            style="@style/Players" />

        <Spinner android:id="@+id/third_player"
            style="@style/Players"/>

        <Spinner android:id="@+id/fourth_player"
            style="@style/Players" />

        <Spinner android:id="@+id/fifth_player"
            style="@style/Players"/>
    </LinearLayout>

</LinearLayout>
